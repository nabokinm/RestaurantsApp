            <h4>  <%= campgrounds[i].name %> </h4>
                 </div>   
                 <p>
                     <a href="/index/<%= campgrounds[i]._id %>"  class="btn btn-primary">More Info</a>
                 </p>
        </div>
    
    <% } %>
   
    </div>
    </div>
        
 


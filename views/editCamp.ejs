<% include partials/header %>

<div class="container">
    <div class="row">
        
        <h1 style="text-align: center">Edit <%= campground.name %></h1>
        
<div style="width:30%; margin: 40px auto;">
        <form action="/index/<%= campground._id %>?_method=PUT" method="POST">
            
            <div class="form-group">
                <input class="form-control" name="campName" type="text" 
                value="<%= campground.name %>">
            </div>
            
            <div class="form-group">
                <input class="form-control" name="campPrice" type="number" 
                min="10" step="5"
                value="<%= campground.price %>">
            </div>
            
             <div class="form-group">
                <input class="form-control" name="campUrl" type="text" 
                value="<%= campground.image %>">
            </div>
            
             <div class="form-group">
                <input class="form-control" name="description" type="text" 
                value="<%= campground.description %>">
            </div>
             
             <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
            
           
</form>
<a href="/index">Restaurants</a>
</div>


        
        </div>
    


</div>

<% include partials/footer %>
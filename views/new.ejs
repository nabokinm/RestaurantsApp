<% include partials/header %>
<link rel="stylesheet" href="/stylesheets/index.css">

<div class="container">
    <div class="row">
        
        <h1 style="text-align: center">Create a new restaurant</h1>
        
<div style="width:30%; margin: 40px auto;">
        <form action="/index" method="POST">
            
            <div class="form-group">
                <input class="form-control" name="campName" type="text" placeholder="name">
            </div>
            
            <div class="form-group">
                <input class="form-control" name="campPrice" type="number" 
                placeholder="Average price per person" min="10" step="5">
            </div>
            
             <div class="form-group">
                <input class="form-control" name="campUrl" type="text" placeholder="image url">
            </div>
            
             <div class="form-group">
                <input class="form-control" name="description" type="text" placeholder="description">
            </div>
             
             <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
            
           
</form>
<a href="/index">Restaurants</a>
</div>


        
        </div>
    


</div>

